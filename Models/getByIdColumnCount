const db = require("../db/connection");

exports.getByIdColumnCount = (article_id) => {

    const query = `
        SELECT 
            articles.author, 
            articles.title, 
            articles.article_id, 
            articles.topic, 
            articles.created_at, 
            articles.votes, 
            articles.article_img_url, 
            COALESCE(COUNT(comments.comment_id), 0) AS comment_count
        FROM 
            articles
        LEFT JOIN 
            comments
        ON 
            articles.article_id = comments.article_id 
        WHERE
            articles.article_id = $1
        GROUP BY 
            articles.article_id;
    `;
    return db.query(query, [article_id]) 
        .then((result) => {
            return result.rows; 
        })
};